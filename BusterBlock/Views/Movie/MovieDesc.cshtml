@model BusterBlock.Models.Movie
@{
    ViewBag.Title = "MovieDesc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>
        Genre: @Model.Genre.GenreCD
    </li>
    <li>
        Release Date: @Model.ReleaseDate.ToString();
    </li>
    <li>
        Date Added: @Model.DateAdded.ToString();
    </li>
    <li>
        Number in Stock: @Model.StockCount;
    </li>
</ul>

